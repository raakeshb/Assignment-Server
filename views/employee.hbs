<div class="row">
    <div class="col-md-12">
        <br>
        <h2>{{employee.firstName}} {{employee.lastName}} - Employee: {{employee.employeeNum}}</h2>
        <hr />
        <form method="post" action="/employee/update">
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input class="form-control" id="firstName" name="firstName" type="text" value="{{employee.firstName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="lastName">Last Name:</label>
                            <input class="form-control" id="lastName" name="lastName" type="text" value="{{employee.lastName}}" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input class="form-control" name="email" type="text" value="{{employee.email}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="SSN">Social Security Num:</label>
                            <input class="form-control" name="SSN" type="text" value="{{employee.SSN}}" readonly />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressStreet">Address (Street):</label>
                            <input class="form-control" name="addressStreet" type="text"
                                value="{{employee.addressStreet}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label for="addressCity">Address (City):</label>
                        <input class="form-control" name="addressCity" type="text" value="{{employee.addressCity}}" />
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressState">Address (State):</label>
                            <input class="form-control" name="addressState" type="text"
                                value="{{employee.addressState}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressPostal">Address (Zip Code):</label>
                            <input class="form-control" name="addressPostal" type="text"
                                value="{{employee.addressPostal}}" />
                        </div>
                    </div>
                </div>


            </fieldset>

            <fieldset>
                <legend>Company Information</legend>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="isManager">Manager:</label>
                            <input class="form-control" type="checkbox" name="isManager" {{#if employee.isManager}}
                                Checked {{/if}} />
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="employeeManagerNum">Employee's Manager Number:</label>
                            <input class="form-control" name="employeeManagerNum" type="text"
                                value="{{employee.employeeManagerNum}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Status:</label><br />
                            <label class="checkbox-inline">
                                {{#equal employee.status "Full Time"}}
                                <input type="radio" name="status" checked value="Full Time" /> Full Time
                                <input type="radio" name="status" value="Part Time" /> Part Time
                            </label>
                            {{else}}
                            <label class="checkbox-inline">
                                <input type="radio" name="status" value="Full Time" /> Full Time
                                <input type="radio" name="status" checked value="Part Time" /> Part Time
                            </label>
                            {{/equal}}
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="department">Department</label>
                            <select class="form-control" name="department" id="department">
                                {{#equal employee.department "1"}}
                                <option value="1" selected>Creative Services</option>
                                <option value="2">Product Development</option>
                                <option value="3">Marketing</option>
                                <option value="4">Strategic Planning</option>
                                <option value="5">Accounting</option>
                                <option value="6">Human Resources</option>
                                <option value="7">Quality Analysis</option>
                                {{/equal}}
                                {{#equal employee.department "2"}}
                                <option value="1">Creative Services</option>
                                <option value="2" selected>Product Development</option>
                                <option value="3">Marketing</option>
                                <option value="4">Strategic Planning</option>
                                <option value="5">Accounting</option>
                                <option value="6">Human Resources</option>
                                <option value="7">Quality Analysis</option>
                                {{/equal}}
                                {{#equal employee.department "3"}}
                                <option value="1">Creative Services</option>
                                <option value="2">Product Development</option>
                                <option value="3" selected>Marketing</option>
                                <option value="4">Strategic Planning</option>
                                <option value="5">Accounting</option>
                                <option value="6">Human Resources</option>
                                <option value="7">Quality Analysis</option>
                                {{/equal}}
                                {{#equal employee.department "4"}}
                                <option value="1">Creative Services</option>
                                <option value="2">Product Development</option>
                                <option value="3">Marketing</option>
                                <option value="4" selected>Strategic Planning</option>
                                <option value="5">Accounting</option>
                                <option value="6">Human Resources</option>
                                <option value="7">Quality Analysis</option>
                                {{/equal}}
                                {{#equal employee.department "5"}}
                                <option value="1">Creative Services</option>
                                <option value="2">Product Development</option>
                                <option value="3">Marketing</option>
                                <option value="4">Strategic Planning</option>
                                <option value="5" selected>Accounting</option>
                                <option value="6">Human Resources</option>
                                <option value="7">Quality Analysis</option>
                                {{/equal}}
                                {{#equal employee.department "6"}}
                                <option value="1">Creative Services</option>
                                <option value="2">Product Development</option>
                                <option value="3">Marketing</option>
                                <option value="4">Strategic Planning</option>
                                <option value="5">Accounting</option>
                                <option value="6" selected>Human Resources</option>
                                <option value="7">Quality Analysis</option>
                                {{/equal}}
                                {{#equal employee.department "7"}}
                                <option value="1">Creative Services</option>
                                <option value="2">Product Development</option>
                                <option value="3">Marketing</option>
                                <option value="4">Strategic Planning</option>
                                <option value="5">Accounting</option>
                                <option value="6">Human Resources</option>
                                <option value="7" selected>Quality Analysis</option>
                                {{/equal}}

                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="hireDate">Hire Date</label>
                            <input class="form-control"  name="hireDate" type="text"
                                value="{{employee.hireDate}}" readonly />
                        </div>
                    </div>
                </div>


            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary float-right" value="Update Employee" /><br /><br /><br />
        </form>
    </div>
</div>